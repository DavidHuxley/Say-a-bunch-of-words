<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/8496074dee.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/public//stylesheets/main.css">
  <link rel="stylesheet" href="/public//stylesheets/list.css">
  <link rel="shortcut icon" href="/assets/icon/favi.ico">
  <script src="https://unpkg.com/luxon"></script>

  <script>
    window.luxon = luxon;
  </script>
  <title>Say a bunch of words</title>
</head>

<body>
  <%- include('nav.html') %>

    <!-- <div class="col-auto">
    <input class="form-control" id="searchBar" placeholder="Search">
  </div> -->

    <div id="container">
      <div id="topSection">
        <div id="topSide"></div>
      </div>
      <div id="mainSection">
        <div id="leftSide"></div>
        <div id="main">
          <div id="listDiv">
            <!-- 삭제된 게시글 보여주지 않음 -->
            <% const filteredPOST = POST.filter(post => post.isDeleted === false); %>
            <!-- 최신글부터 보여주기 위해 작성시간순으로 내림차순 소트함 -->
            <% const sortedPOST = filteredPOST.sort((a, b) => b.time.localeCompare(a.time)); %> 
            <% for (var i=0; i < sortedPOST.length; i++) { %>
              <div id="cardlist">
                <div class="card">
                  <div class="front">
                    <div id="frontImg">
                      <img class="frontImg" src=<%=sortedPOST[i].img %>> </img>
                    </div>
                    <div id="frontText">
                      <div id="writingTime">
                        <% const currentTime = luxon.DateTime.local().toISO(); %>
                        <% const postTime = luxon.DateTime.fromISO(sortedPOST[i].time); %>
                        <% const duration = luxon.DateTime.fromISO(currentTime).diff(luxon.DateTime.fromISO(postTime)); %>
                          <% let timeAgo = ''; %>
                          <% if (duration.as('seconds') < 60) { 
                            timeAgo = '방금 전';
                          } else if (duration.as('minutes') < 60) {
                            timeAgo = `${Math.floor(duration.as('minutes'))}분 전`;
                          } else if (duration.as('hours') < 24) {
                            timeAgo = `${Math.floor(duration.as('hours'))}시간 전`;
                          } else if (duration.as('days') < 7) {
                            timeAgo = `${Math.floor(duration.as('days'))}일 전`;
                          } else if (duration.as('weeks') < 4) {
                            timeAgo = `${Math.floor(duration.as('weeks'))}주 전`;
                          } else if (duration.as('months') < 12) {
                            timeAgo = `${Math.floor(duration.as('months'))}달 전`;
                          } else {
                            timeAgo = '오래 전';
                          } %>
                          <span>
                            <%= timeAgo %>
                          </div>
                          <div id="frontContent">
                            <h4>
                              <%= sortedPOST[i].title %>
                            </h4>
                          </div>
                          <div id="writer">
                            <span>
                              <%= sortedPOST[i].writer %>
                            </span>
                            <% const user=USER.find(u=> u.nickname === sortedPOST[i].writer); %>
                        <% if (user) { %>
                          <img src=<%=user.profileImg %>>
                          <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="back">
                    <div id="backContent">
                      <span>
                        <%= sortedPOST[i].content %>
                      </span>
                    </div>
                    <div id="backBtnBundle">
                      <i class="fa-regular fa-comment-dots" style="color: #ececec;" id="backBtnComment"></i>
                      <i class="fa-regular fa-heart" style="color: #ececec;" id="backBtnHeart"></i>
                      <i class="fa-regular fa-bookmark" style="color: #ececec;" id="backBtnBookmark"></i>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
          </div>
        </div>
        <div id="rightSide"></div>
      </div>
    </div>
    <script>
      console.log(posts); // 받아온 게시글 데이터
      console.log(users); // 받아온 사용자 데이터
    </script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="/public/javascripts/mainList.js"></script>
</body>

</html>